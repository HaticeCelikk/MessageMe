<h2 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <!-- Birinci Sütun: Chatbox -->
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          
          <!-- message events  -->
        <%= render @messages %>

         

        
        </div> <!-- /.ui small feed -->
      </div> <!-- /.content -->
  <!-- Ekstra İçerik (Opsiyonel) -->
    <div class="extra content">
      <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %> 
     
        <div class="field">
            <div class="ui fluied icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe%>
        </div>
      
        </div>
      <% end %>
    </div>
  </div> <!-- /.ui fluid raised card chatbox -->
</div> <!-- /.twelve wide column -->

  <!-- İkinci Sütun: Menü -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div> <!-- /.ui inverted vertical menu -->
      </div> <!-- /.content -->
    </div> <!-- /.ui fluid raised card chatbox -->
  </div> <!-- /.four wide column -->
</div> <!-- /.ui two column grid -->
